@model IEnumerable<Dyg.Core.Model.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h2>Kategoriler</h2>
            <p>
                <a asp-action="Create">Yeni Kategori Ekle</a>
            </p>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                   
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="tbl">
                       
                            <thead>
                                <tr>
                                    <th>
                                        Kategori
                                    </th>
                                    <th>
                                        Üst Kategori
                                    </th>
                                    <th>
                                        Yayın Tarihi
                                    </th>
                                    <th>
                                        Yayında mı?
                                    </th>
                                    <th>
                                        Eylemler
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ParentCategory.Name)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.PublishDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsPublished)
                                        </td>


                                        <td>
                                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> 
                                            <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Detaylar</a> 
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

                        @section scripts {
                            <script>
                                $(document).ready(function () {
                                    $('#tbl').DataTable({
                                        "responsive": true,
                                        "language": {
                                            "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json"
                                        }
                                    });
                                });
                            </script>}
